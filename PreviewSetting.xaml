            <ComboBoxItem>VMR-7</ComboBoxItem>
            <ComboBoxItem>VMR-9</ComboBoxItem>
            <ComboBoxItem>EVR</ComboBoxItem>
        </ComboBox>
        <Label Content="( 4: 3)" Height="28" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="189,158,0,0" Name="Label_AspectRatio" VerticalAlignment="Top" />
