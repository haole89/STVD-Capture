        <RadioButton Content="Disable" Height="16" HorizontalAlignment="Right" Margin="0,37,30,0" Name="radioButton_VideoDisable" VerticalAlignment="Top" GroupName="Video Preview" Click="radioButton_VideoDisable_Click" />
