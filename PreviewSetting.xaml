        <Label Content="Maintain Aspect Ratio:" Height="28" HorizontalAlignment="Left" Margin="18,134,0,0" Name="label4" VerticalAlignment="Top" HorizontalContentAlignment="Right" />
        <RadioButton Content="Enable" Height="16" HorizontalAlignment="Left" Margin="179,37,0,0" Name="radioButton_VideoEnable" VerticalAlignment="Top" GroupName="Video Preview" Click="radioButton_VideoEnable_Click" />
        <RadioButton Content="Disable" Height="16" HorizontalAlignment="Right" Margin="0,139,30,0" Name="radioButton_MaintainDisable" VerticalAlignment="Top" GroupName="Maintain" Click="radioButton_MaintainDisable_Click" />
