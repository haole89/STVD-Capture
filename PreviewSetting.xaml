        <RadioButton Content="Enable" Height="16" HorizontalAlignment="Left" Margin="179,71,0,0" Name="radioButton_AudioEnable" VerticalAlignment="Top" GroupName="Audio Preview" Click="radioButton_AudioEnable_Click" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="179,100,0,0" Name="comboBox_VideoRender" VerticalAlignment="Top" Width="166"  DropDownClosed="comboBox_VideoRender_DropDownClosed">
